<div id="content" class="span10">
  <div class="row-fluid sortable ui-sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title="">
        <h2><i class="icon-edit"></i> 创建新的活动</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
        </div>
      </div>
      <div class="box-content">
        <%= form_tag admin_campaign_path, :multipart =>true, :class =>'form-horizontal' do %>
            <input name="_method" type="hidden" value="put" />
            <fieldset>
              <legend></legend>
              <div class="control-group">
                <label class="control-label" for="ctitle">标题 </label>
                <div class="controls">
                  <input type="text" class="span6 typeahead" id="ctitle" name="campaign[title]" value="<%= @campaign.title %>" data-required="true" data-error-message="标题不能为空!" />
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="ccontent">内容</label>
                <div class="controls">
                  <textarea name="campaign[content]" id="ccontent" cols="30" rows="10" style="margin: 0; width: 401px; height: 182px;" data-required="true" data-error-message="内容不能为空!"><%= @campaign.content %></textarea>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label" for="cimage">活动图片</label>
                <div class="controls">
                  <input type="file" class="span6 typeahead" id="cimage" name="campaign[image]" />
                  <img src="<%= @campaign.image.url %>" />
                </div>
              </div>

              <div class="control-group">
                <label class="control-label" for="clink">链接地址</label>
                <div class="controls">
                  <input type="text" class="span6 typeahead" value="<%= @campaign.link %>" id="clink" name="campaign[link]" data-required="true" data-error-message="请输入活动链接地址" />
                </div>
              </div>

              <div class="control-group">
                <label class="control-label" for="cimage">开始日期</label>
                <div class="controls">
                  <input type="text" class="span3 typeahead Wdate" id="cbegindate" name="campaign[begin_date]" value="<%= @campaign.begin_date %>" data-required="true" data-required-message="开始日期不能为空" onFocus="WdatePicker({isShowClear:false,readOnly:true})" />
                </div>
              </div>
              <div class="control-group">
                <label class="control-label" for="cimage">结束日期</label>
                <div class="controls">
                  <input type="text" class="span3 typeahead Wdate" id="coverdate" name="campaign[over_date]" value="<%= @campaign.over_date %>" data-required="true" data-required-message="结束日期不能为空" data-afterdate-message="结束日期要大于开始日期" onFocus="WdatePicker({isShowClear:false,readOnly:true})" />
                </div>
              </div>
              <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="campaign_create_btn">更新</button>
              </div>
            </fieldset>
        <% end %>

      </div>
    </div><!--/span-->

  </div>
</div>
<script type="text/javascript" src="/js/my97DatePicker/WdatePicker.js"></script>
<!--<script type="text/javascript" src="/js/parsley/i18n/messages.zh-cn.js"></script>-->
<script type="text/javascript" src="/js/parsley/parsley.min.js"></script>
<script type="text/javascript" src="/js/parsley/parsley.extend.js"></script>


<script type="text/javascript">
    $(function (){
        $('#campaign_create_btn').click(function (){
            $('form').parsley('validate');
        });

    });
</script>